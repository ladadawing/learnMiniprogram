page {
  height: 100%;
}
.category-wrapper {
  height: 100%;
  /* 继承父元素的高度 */
}
.category-wrapper .cates-content {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.category-wrapper .cates-content .left {
  flex: 2;
}
.category-wrapper .cates-content .left .menu-item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.category-wrapper .cates-content .left .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.category-wrapper .cates-content .right {
  flex: 5;
}
.category-wrapper .cates-content .right .goods-group .goods-title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.category-wrapper .cates-content .right .goods-group .goods-title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.category-wrapper .cates-content .right .goods-group .goods-list {
  display: flex;
  flex-wrap: wrap;
}
.category-wrapper .cates-content .right .goods-group .goods-list navigator {
  width: 33.33%;
  text-align: center;
}
.category-wrapper .cates-content .right .goods-group .goods-list navigator image {
  width: 50%;
}
